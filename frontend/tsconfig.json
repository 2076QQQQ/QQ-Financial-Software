{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "jsx": "react-jsx",
    "lib": ["DOM", "DOM.Iterable", "ES2020"],
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@/components/*": ["./components/*"],
      "@/lib/*": ["./lib/*"],
      "@/pages/*": ["./pages/*"]
    },
    "noEmit": true,
    "allowJs": true,
    "incremental": true,
    "isolatedModules": true
  },
  "include": [
    "components/**/*",
    "lib/**/*",
    "pages/**/*",
    "styles/**/*"
  ],
  "exclude": ["node_modules"]
}
