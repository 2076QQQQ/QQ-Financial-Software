// A. èŽ·å–æ¿€æ´»ä¿¡æ¯ (æ ¡éªŒ Token æœ‰æ•ˆæ€§)
// å‰ç«¯ ActivateAccount é¡µé¢åŠ è½½æ—¶è°ƒç”¨
app.get('/api/auth/activate-info', (req, res) => {
  const { token } = req.query;
  
  if (!token) return res.status(400).json({ message: 'Token is required' });

  const data = db.get();
  
  // 1. åœ¨é‚€è¯·è¡¨ä¸­æŸ¥æ‰¾çŠ¶æ€ä¸º pending ä¸” token åŒ¹é…çš„è®°å½•
  const invite = (data.invitations || []).find((i: any) => i.token === token && i.status === 'pending');
  
  if (!invite) {
    return res.status(404).json({ message: 'é‚€è¯·é“¾æŽ¥æ— æ•ˆæˆ–å·²è¿‡æœŸ' });
  }

  // 2. èŽ·å–é‚€è¯·äººå§“å (å¯é€‰ä¼˜åŒ–)
  const inviter = (data.users || []).find((u: any) => u.id === invite.inviterId);
  const inviterName = inviter ? inviter.name : 'ç®¡ç†å‘˜';

  // 3. è¿”å›žç»™å‰ç«¯ç”¨äºŽå±•ç¤º
  res.json({
    email: invite.email,
    role: invite.role,
    companyName: invite.companyName,
    inviterName: inviterName
  });
});

// B. æ‰§è¡Œæ¿€æ´» (åˆ›å»ºæ–°ç”¨æˆ·)
// å‰ç«¯å¡«å†™å®Œå§“åå¯†ç æäº¤æ—¶è°ƒç”¨
app.post('/api/auth/activate', async (req, res) => {
  const { token, name, password } = req.body;
  const data = db.get();

  // 1. å†æ¬¡æ ¡éªŒé‚€è¯·è®°å½•
  const inviteIndex = (data.invitations || []).findIndex((i: any) => i.token === token && i.status === 'pending');
  if (inviteIndex === -1) {
    return res.status(400).json({ message: 'é‚€è¯·æ— æ•ˆ' });
  }
  
  const invite = data.invitations[inviteIndex];

  // 2. æ£€æŸ¥é‚®ç®±æ˜¯å¦å·²è¢«æ³¨å†Œ (é˜²æ­¢é‡å¤æ³¨å†Œ)
  const userExists = (data.users || []).some((u: any) => u.email === invite.email);
  if (userExists) {
    return res.status(409).json({ message: 'è¯¥é‚®ç®±å·²æ³¨å†Œï¼Œè¯·ç›´æŽ¥ç™»å½•' });
  }

  // 3. å¯†ç åŠ å¯†
  const salt = await bcrypt.genSalt(10);
  const passwordHash = await bcrypt.hash(password, salt);

  // 4. åˆ›å»ºæ–°ç”¨æˆ·å¯¹è±¡
  const newUser = {
    id: `user_${Date.now()}`,
    email: invite.email,
    name: name, // ç”¨æˆ·å¡«å†™çš„çœŸå®žå§“å
    passwordHash: passwordHash,
    companyId: invite.companyId, // ç»‘å®šåˆ°é‚€è¯·çš„å…¬å¸
    role: invite.role,           // ç»‘å®šé‚€è¯·æ—¶çš„è§’è‰²
    isAdmin: false,              // é»˜è®¤ä¸ç»™ç®¡ç†å‘˜æƒé™ (åŽç»­å¯ç”± Owner ææƒ)
    status: 'Active',
    created_at: new Date().toISOString()
  };

  // 5. æ›´æ–°æ•°æ®åº“
  // 5.1 æ·»åŠ ç”¨æˆ·
  db.update('users', [...(data.users || []), newUser]);
  
  // 5.2 å°†é‚€è¯·çŠ¶æ€æ”¹ä¸º 'accepted'
  const newInvitations = [...data.invitations];
  newInvitations[inviteIndex] = { ...invite, status: 'accepted', acceptedAt: new Date().toISOString() };
  db.update('invitations', newInvitations);

  // 6. (å¯é€‰) è‡ªåŠ¨ç™»å½•ï¼šç›´æŽ¥ä¸‹å‘ Session Cookie
  // è¿™æ ·ç”¨æˆ·æ¿€æ´»åŽä¸éœ€è¦å†è¾“ä¸€éå¯†ç ç™»å½•
  // const tokenPayload = { userId: newUser.id, companyId: newUser.companyId, role: newUser.role };
  // const sessionToken = sign(tokenPayload); // å‡è®¾ sign å‡½æ•°åœ¨ server.ts é¡¶éƒ¨å·²å®šä¹‰
  // res.setHeader('Set-Cookie', [`session=${sessionToken}`, 'Path=/', 'HttpOnly', 'SameSite=Lax', `Max-Age=${60 * 60 * 24 * 7}`].join('; '));
// ==========================================
// 19. å¯†ç é‡ç½®æµç¨‹ (Password Reset)
