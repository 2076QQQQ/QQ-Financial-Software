app.put('/api/settings/fund-accounts', requireAuth, (req: any, res) => {
  const data = db.get();
  const { id, ...updates } = req.body;
  const list = data.fundAccounts || [];
  const index = list.findIndex((a: any) => a.id === id && a.companyId === req.user.companyId);
  
  if (index !== -1) {
    list[index] = { ...list[index], ...updates };
    db.update('fundAccounts', list);
    res.json({ success: true });
  } else {
    res.status(404).json({ message: 'Not found' });
  }
});

app.delete('/api/settings/fund-accounts/:id', requireAuth, (req: any, res) => {
  const { id } = req.params; 
  const data = db.get();
  const list = (data.fundAccounts || []).filter((a: any) => !(a.id === id && a.companyId === req.user.companyId));
  db.update('fundAccounts', list);
  res.json({ success: true });
});

