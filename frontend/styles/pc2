app.post('/api/auth/reset-request', (req, res) => {
  const { email } = req.body;
  const data = db.get();
  
  // 1. æŸ¥æ‰¾ç”¨æˆ·
  const user = (data.users || []).find((u: any) => u.email === email);
  
  // å®‰å…¨ç­–ç•¥ï¼šå³ä½¿é‚®ç®±ä¸å­˜åœ¨ï¼Œä¹Ÿè¿”å›žæˆåŠŸï¼Œé˜²æ­¢æžšä¸¾çˆ†ç ´è´¦å·
  if (!user) {
    // æ¨¡æ‹Ÿå»¶è¿Ÿï¼Œè®©æ”»å‡»è€…æ— æ³•é€šè¿‡å“åº”æ—¶é—´åˆ¤æ–­é‚®ç®±æ˜¯å¦å­˜åœ¨
    setTimeout(() => res.json({ success: true }), 500); 
    return;
  }

  // 2. ç”Ÿæˆé‡ç½® Token
  const token = crypto.randomBytes(32).toString('hex');
  const expiresAt = Date.now() + 3600000; // 1å°æ—¶åŽè¿‡æœŸ

  // 3. å­˜å…¥æ•°æ®åº“
  const resetRecord = {
    id: `pr_${Date.now()}`,
    userId: user.id,
    email: user.email,
    token,
    expiresAt,
    used: false
  };
  
  // ç¡®ä¿å­˜å‚¨æ•°ç»„å­˜åœ¨ (ä¹‹å‰ database.ts é‡Œå®šä¹‰äº† passwordResets: [])
  const resets = data.passwordResets || [];
  db.update('passwordResets', [...resets, resetRecord]);

  // 4. æ¨¡æ‹Ÿå‘é€é‚®ä»¶
  const resetLink = `http://localhost:3000/auth/new-password?token=${token}`;
  console.log("ðŸ”‘ [MOCK RESET MAIL] To:", email);
  console.log("ðŸ”— [LINK]:", resetLink);

  // çœŸå®žå‘é€é‚®ä»¶é€»è¾‘ (å¯é€‰)
  // transporter.sendMail(...) 

  res.json({ success: true });
});
  res.json({ success: true, userId: newUser.id });
});
