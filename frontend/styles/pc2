4.è¿™æ˜¯æˆ‘çš„é‡æ–°è®¾ç½®å¯†ç é¡µã€‚import { useState } from 'react';
import { useRouter } from 'next/router';
import { Building2, Loader2, ArrowLeft } from 'lucide-react';
// âœ… ä¼˜åŒ–ï¼šä½¿ç”¨ @ åˆ«åè·¯å¾„
import { Button } from '@/components/ui/button';
import { Input } from '@/components/ui/input';
import { Label } from '@/components/ui/label';
// âœ… ä¿®æ­£ï¼šæŒ‡å‘ mockData.ts
import { resetRequest } from '@/lib/mockData';

export default function ResetPassword() {
  const router = useRouter();
  const [email, setEmail] = useState('');
  const [loading, setLoading] = useState(false);
  const [error, setError] = useState('');

  const validateEmail = (email: string) => {
    const regex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
    return regex.test(email);
  };

  const handleSubmit = async (e: React.FormEvent) => {
    e.preventDefault();
    setError('');

    if (!validateEmail(email)) {
      setError('è¯·è¾“å…¥æœ‰æ•ˆçš„é‚®ç®±åœ°å€');
      return;
    }

    setLoading(true);
    try {
      // è°ƒç”¨åŽç«¯å‘é€é‡ç½®é‚®ä»¶æŽ¥å£
      await resetRequest(email);
      // è·³è½¬åˆ°å‘é€æˆåŠŸé¡µ (éœ€è¦ä½ è‡ªå·±åˆ›å»º ResetPasswordSent é¡µé¢)
      router.push(`/auth/ResetPasswordSent?email=${encodeURIComponent(email)}`);
    } catch (err: any) {
      // å‡ºäºŽå®‰å…¨è€ƒè™‘ï¼Œé€šå¸¸å³ä½¿é‚®ç®±ä¸å­˜åœ¨ä¹Ÿä¸æŠ¥é”™ï¼Œæˆ–è€…æç¤ºæ¨¡ç³Šä¿¡æ¯
      // è¿™é‡Œä¸ºäº†æ¼”ç¤ºæ–¹ä¾¿ï¼Œå¦‚æžœå‡ºé”™(å¦‚ç½‘ç»œé—®é¢˜)åˆ™åœæ­¢ loading
      console.error(err);
      setLoading(false);
      // å¯é€‰ï¼šsetError('å‘é€å¤±è´¥ï¼Œè¯·ç¨åŽé‡è¯•');
    }
  };

  return (
    <div className="min-h-screen flex items-center justify-center px-4">
      <div className="w-full max-w-md">
        <button
          onClick={() => router.push('/login')} // å‡è®¾ç™»å½•é¡µè·¯ç”±æ˜¯ /login
          className="flex items-center gap-2 text-gray-600 hover:text-gray-900 mb-8 transition-colors"
        >
          <ArrowLeft className="w-4 h-4" />
          è¿”å›žç™»å½•
        </button>

        <div className="text-center mb-8">
          <div className="inline-flex items-center justify-center w-16 h-16 bg-blue-600 rounded-xl mb-4 shadow-lg shadow-blue-100">
            <Building2 className="w-8 h-8 text-white" />
          </div>
          <h1 className="text-xl font-bold text-gray-900 mb-2">é‡ç½®å¯†ç </h1>
          <p className="text-gray-600 text-sm">è¾“å…¥æ‚¨çš„æ³¨å†Œé‚®ç®±ï¼Œæˆ‘ä»¬å°†å‘é€é‡ç½®é“¾æŽ¥</p>
        </div>

        <form onSubmit={handleSubmit} className="space-y-4">
          <div className="space-y-2">
            <Label htmlFor="email">æ‚¨çš„æ³¨å†Œé‚®ç®±</Label>
            <Input
              id="email"
              type="email"
              placeholder="you@company.com"
              value={email}
              onChange={(e) => {
                setEmail(e.target.value);
                if (error) setError('');
              }}
              className={error ? 'border-red-500' : ''}
            />
            {error && (
              <p className="text-sm text-red-600">{error}</p>
            )}
          </div>

          <Button 
            type="submit" 
            className="w-full bg-blue-600 hover:bg-blue-700"
            disabled={loading || !email}
          >
            {loading ? (
              <>
                <Loader2 className="w-4 h-4 mr-2 animate-spin" />
                å‘é€ä¸­...
              </>
            ) : (
              'å‘é€é‡ç½®é“¾æŽ¥'
            )}
          </Button>
        </form>
      </div>
    </div>
  );
}
